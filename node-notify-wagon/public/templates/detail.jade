doctype html
html(lang="en")

  head
    title=root.name
    include ./includes/head_md.jade

  body
    include ./includes/dialog_message.jade

    div.mdl-layout.mdl-js-layout.mdl-layout--fixed-header
      header.mdl-layout__header
          div.mdl-layout__header-row
              span.mdl-layout-title=root.name

      main.mdl-layout__content
        div.content
            ul.mdl-list
              each item in root.items
                li.mdl-list__item.mdl-shadow--2dp
                  span.mdl-list__item-primary-content
                    i.material-icons.mdl-list__item-avatar=avatar
                    | #{item.name}
                    span.mdl-list__item-sub-title #{item.users?.length}
                  span.mdl-list__item-secondary-action
                    button(data-type="item", data-to=item.name, data-id=item.id, data-peoples=60).mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect.mdl-button--colored.show-dialog
                      i.material-icons message
